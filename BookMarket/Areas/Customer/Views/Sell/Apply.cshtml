

@model BookMarket.Models.SellApplications

@{
    ViewData["Title"] = "Apply";
}
<br />

<h2 class="text-info">Send your application</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Rent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProofOfAddress" class="control-label"></label>
                <input asp-for="ProofOfAddress"  />
                <span asp-validation-for="ProofOfAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProofOfID" class="control-label"></label>
                <input asp-for="ProofOfID"  type="file" />
                <span asp-validation-for="ProofOfID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit Application" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}






