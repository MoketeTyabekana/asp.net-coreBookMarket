
@model BookMarket.Models.SellApplication
@{
    ViewData["Title"] = "Apply";
}
<br />

<h2 class="text-info">Send your application</h2>
<form asp-action="Apply" method="post">
  
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.message</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProofAddress"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProofAddress" type="file" class="form-control" />
            </div>
            <span asp-validation-for="ProofAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProofId"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProofId" type="file" class="form-control" />
            </div>
            <span asp-validation-for="ProofId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit Application" />
            <a asp-action="Terms" class="btn btn-success">Back</a>
        </div>
    </div>

</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





