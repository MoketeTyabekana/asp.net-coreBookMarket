
@model BookMarket.Models.MyBookDetails
@{
    ViewData["Title"] = "Create";
}
<br />

<h2 class="text-info">Add New Book</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.message</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Title"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.Title" class="form-control" />
            </div>
            <span asp-validation-for="MyBook.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Author"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.Author" class="form-control" />
            </div>
            <span asp-validation-for="MyBook.Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.ISBN"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="MyBook.ISBN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Edition"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.Edition" class="form-control" />
            </div>
            <span asp-validation-for="MyBook.Edition" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Description"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="MyBook.Description" class="form-control" ></textarea>
            </div>
            <span asp-validation-for="MyBook.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.YearPublished"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.YearPublished" class="form-control" />
            </div>
            <span asp-validation-for="MyBook.YearPublished" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Price"></label> per week
            </div>
            <div class="col-5">
                <input asp-for="MyBook.Price" class="form-control" /> 
            </div>
            <span asp-validation-for="MyBook.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Image"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="MyBook.Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.Condition"></label>
            </div>
            <div class="col-5">
                <textarea asp-for="MyBook.Condition" class="form-control" ></textarea>
            </div>
            <span asp-validation-for="MyBook.Condition" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.IsAvailable"></label>
            </div>
            <div class="col-5">
                <input asp-for="MyBook.IsAvailable" class="" type="checkbox" />
            </div>
            <span asp-validation-for="MyBook.IsAvailable" class="text-danger"></span>
        </div>
       
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MyBook.CategoryId"></label>
            </div>
            <div class="col-5">
                <select asp-for="MyBook.CategoryId" asp-items="ViewBag.categoryId" class="form-control"></select>
                @*<input asp-for="ProductTypeId" class="form-control" />*@
            </div>
            <span asp-validation-for="MyBook.CategoryId" class="text-danger"></span>
        </div>
      
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>

</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





