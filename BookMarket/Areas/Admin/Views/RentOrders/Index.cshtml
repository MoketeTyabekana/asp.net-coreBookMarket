
@using BookMarket.Models
@model IEnumerable<RentOrderDetails>
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Rented List</h2>
    </div>

</div>
<form method="post">
    <div class="row">
        <div class="col-3">
            <input type="number" class="form-control" name="lowAmount" />
        </div>
        <div class="col-3">
            <input type="number" class="form-control" name="largeAmount" />
        </div>
        <div class="col-3">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
        <div class="col-3"></div>
        <div class="col-3"></div>
    </div>
</form>
<br />
<div>
    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-info">
                <th>
                    Username
                </th>
                <th>
                    Full Names
                </th>
                <th>
                    Order No
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Return Date
                </th>
                <th>
                    Book Title
                </th>
                <th></th>
                <th></th>
                <th></th>


            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.User.UserName</td>
                <td>@item.User.Name @item.User.Surname</td>
                <td>@item.Order.OrderNo</td>
                <td>@item.Order.OrderDate</td>
                <td>@item.Order.ReturnDate</td>
                <td>@item.Book.Title</td>


                <td>
                    <a asp-action="Delete" asp-controller="Orders" asp-route-id="@item.Id" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
                <td></td>
                <td></td>
            </tr>




            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
        $(function () {
            var save = '@TempData["save"]'
            if (save !='') {
                alertify.success(save);
            }
        })

         $(function () {
            var remove = '@TempData["remove"]'
            if (remove != '') {
                alertify.error(remove);
            }


        })

          $(function () {
            var update = '@TempData["update"]'
              if (update != '') {
                  alertify.success(update);
            }


        })
    </script>
}



